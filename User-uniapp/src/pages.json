{
	"easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/my/my",
			"style": {
				"navigationBarTitleText": "我的"
			}
		},
		{
			"path": "pages/chat/chat",
			"style": {
				"navigationBarTitleText": "chat"
			}
		},
		{
			"path": "pages/exam/exam",
			"style": {
				"navigationBarTitleText": "exam"
			}
		},
		{
			"path": "pages/file/file",
			"style": {
				"navigationBarTitleText": "file"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#666666",
		"selectedColor": "#007AFF",
		"backgroundColor": "#F8F8F8",
		"borderStyle": "black",
		"H5": {
			"position": "bottom"
		},
		"list": [
			{
				"pagePath": "pages/index/index",
				"text": "首页",
				"iconPath": "static/tabBar/index.png",
				"selectedIconPath": "static/tabBar/index-active.png"
			},
			{
				"pagePath": "pages/exam/exam",
				"text": "考试",
				"iconPath": "static/tabBar/exam.png",
				"selectedIconPath": "static/tabBar/exam-active.png"
			},
			{
				"pagePath": "pages/chat/chat",
				"text": "喵喵智答",
				"iconPath": "static/tabBar/chat.png"
			},
			{
				"pagePath": "pages/file/file",
				"text": "资料",
				"iconPath": "static/tabBar/file.png",
				"selectedIconPath": "static/tabBar/file-active.png"
			},
			{
				"pagePath": "pages/my/my",
				"text": "我的",
				"iconPath": "static/tabBar/my.png",
				"selectedIconPath": "static/tabBar/my-active.png"
			}
		]
	}
}